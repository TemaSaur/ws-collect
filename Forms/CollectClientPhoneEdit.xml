      </Object>
    </Command>

    <Command Name="ClientPhoneContactPersonTypeComboBoxValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="ClientPhoneContactPersonTypeComboBox" />
    </Command>

    <Command Name="ClientPhoneContactPersonTypeComboBoxTextValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="ClientPhoneContactPersonTypeComboBox">
        <Property Name="Text">
          <Parameter Name="ContactPersonType" />
        </Property>
      </Object>
    </Command>

    <Command Name="PhoneNumberValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="PhoneNumber">
        <Object Name="ClientPhoneNumberTextBox" />
      </Parameter>
    </Command>

    <Command Name="PhoneTypeIdValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="PhoneTypeId">
        <Switch>
          <Case>
            <When>
              <And>
                <Condition Name="ClientPhoneTypeComboBoxIsNullCondition" />
                <Not>
                  <Condition Name="ClientPhoneTypeComboBoxIsEmptyCondition" />
                </Not>
              </And>
            </When>
            <Then>
              <DataConnection SourceDataConnection="OtherPhoneTypeSecondaryGetDataConnection">
                <Fields>
                  <Field Name="PhoneTypeId" />
                </Fields>
              </DataConnection>
            </Then>
          </Case>
          <Case>
            <Object Name="ClientPhoneTypeComboBox" />
          </Case>
        </Switch>
      </Parameter>
    </Command>

    <Command Name="PhoneTypeValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="PhoneType">
        <Switch>
          <Case>
            <When>
              <And>
                <Condition Name="ClientPhoneTypeComboBoxIsNullCondition" />
                <Not>
                  <Condition Name="ClientPhoneTypeComboBoxIsEmptyCondition" />
                </Not>
              </And>
            </When>
            <Then>
              <Object Name="ClientPhoneTypeComboBox">
                <Property Name="VisibleText" />
              </Object>
            </Then>
          </Case>
          <Case />
        </Switch>
      </Parameter>
    </Command>

    <Command Name="PhoneTypeTitleValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="PhoneTypeTitle">
        <Switch>
          <Case>
            <When>
              <Not>
                <Condition Name="ClientPhoneTypeComboBoxIsEmptyCondition" />
              </Not>
            </When>
            <Then>
              <Object Name="ClientPhoneTypeComboBox">
                <Property Name="VisibleText" />
              </Object>
            </Then>
          </Case>
          <Case />
        </Switch>
      </Parameter>
    </Command>

    <Command Name="ContactPersonTypeIdValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="ContactPersonTypeId">
        <Switch>
          <Case>
            <When>
              <And>
                <Condition Name="ClientPhoneContactPersonTypeComboBoxIsNullCondition" />
                <Not>
                  <Condition Name="ClientPhoneContactPersonTypeComboBoxIsEmptyCondition" />
                </Not>
              </And>
            </When>
            <Then>
              <DataConnection SourceDataConnection="OtherContactPersonTypeSecondaryGetDataConnection">
                <Fields>
                  <Field Name="ContactPersonTypeId" />
                </Fields>
              </DataConnection>
            </Then>
          </Case>
          <Case>
            <Object Name="ClientPhoneContactPersonTypeComboBox" />
          </Case>
        </Switch>
      </Parameter>
    </Command>

    <Command Name="ContactPersonTypeValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="ContactPersonType">
        <Switch>
          <Case>
            <When>
              <And>
                <Condition Name="ClientPhoneContactPersonTypeComboBoxIsNullCondition" />
                <Not>
                  <Condition Name="ClientPhoneContactPersonTypeComboBoxIsEmptyCondition" />
                </Not>
              </And>
            </When>
            <Then>
              <Object Name="ClientPhoneContactPersonTypeComboBox">
                <Property Name="VisibleText" />
              </Object>
            </Then>
          </Case>
          <Case />
        </Switch>
      </Parameter>
    </Command>

    <Command Name="ContactPersonTypeTitleValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="ContactPersonTypeTitle">
        <Switch>
          <Case>
            <When>
              <Not>
                <Condition Name="ClientPhoneContactPersonTypeComboBoxIsEmptyCondition" />
              </Not>
            </When>
            <Then>
              <Object Name="ClientPhoneContactPersonTypeComboBox">
                <Property Name="VisibleText" />
              </Object>
            </Then>
          </Case>
          <Case />
        </Switch>
      </Parameter>
    </Command>

    <Command Name="ContactPersonValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="ContactPerson">
        <Switch>
          <Case>
            <When>
              <Not>
                <Condition Name="ClientContactPersonTypeEqualClientCondition" />
              </Not>
            </When>
            <Then>
              <Object Name="ClientPhoneContactPersonTextBox" />
            </Then>
          </Case>
          <Case />
        </Switch>
      </Parameter>
    </Command>

    <Command Name="CommentValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Comment">
        <Object Name="ClientPhoneCommentTextBox" />
      </Parameter>
    </Command>

    <Command Name="IsMainValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="IsMain">
        <Object Name="ClientPhoneIsMainCheckBox" />
      </Parameter>
    </Command>

    <Command Name="SaveSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands Lock="True">
        <Command Name="PhoneNumberValueSetCommand" />
        <Command Name="PhoneTypeTitleValueSetCommand" />
        <Command Name="PhoneTypeValueSetCommand" />
        <Command Name="PhoneTypeIdValueSetCommand" />
        <Command Name="ContactPersonTypeTitleValueSetCommand" />
        <Command Name="ContactPersonTypeValueSetCommand" />
        <Command Name="ContactPersonTypeIdValueSetCommand" />
        <Command Name="ContactPersonValueSetCommand" />
        <Command Name="CommentValueSetCommand" />
        <Command Name="IsMainValueSetCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Command>
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormHeightValueSetCommand" />
        <If>
          <When>
            <And>
              <Condition Name="PhoneTypeIdEqualOtherCondition" />
              <Not>
                <Condition Name="PhoneTypeIsNullCondition" />
              </Not>
            </And>
          </When>
          <Then>
            <Command Name="ClientPhoneTypeComboBoxValueSetCommand" />
            <Command Name="ClientPhoneTypeComboBoxTextValueSetCommand" />
          </Then>
        </If>
        <If>
          <When>
            <And>
              <Condition Name="ContactPersonTypeIdEqualOtherCondition" />
              <Not>
                <Condition Name="ContactPersonTypeIsNullCondition" />
              </Not>
            </And>
          </When>
          <Then>
            <Command Name="ClientPhoneContactPersonTypeComboBoxValueSetCommand" />
            <Command Name="ClientPhoneContactPersonTypeComboBoxTextValueSetCommand" />
          </Then>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="ClientPhoneContactPersonTextBoxVisibleChangedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormHeightValueSetCommand" />
      </Commands>
    </Execution>
  </Executions>

