              <Property Name="SelectedRowCellValueByColumnName">
                <Parameters>
                  <Parameter Name="ColumnName">MailingTemplateId</Parameter>
                </Parameters>
              </Property>
            </Object>
          </Value>
        </Parameter>
      </Parameters>
      <SqlQueries>
        <SqlQuery Name="MailingTemplateDeleteSqlQuery" Type="Delete" />
      </SqlQueries>
