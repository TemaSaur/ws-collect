          <DataConnection SourceDataConnection="PermissionsPrimaryGetDataConnection">
            <Fields>
              <Field Name="UserIsAdministrator" />
            </Fields>
          </DataConnection>
        </Item>
        <Item>True</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="MailingTemplateDoubleClickCondition" Type="CellDoubleClickCondition" Assembly="Conditions">
      <Table Name="MailingTemplateDatabaseTable" />
    </Condition>

    <Condition Name="MailingTemplateSelectedCondition" Type="NotEqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="MailingTemplateDatabaseTable">
            <Property Name="SelectedRowsCount" />
          </Object>
        </Item>
        <Item>0</Item>
      </Items>
    </Condition>

    <Condition Name="SelectedMailingTemplateIsNotSystemCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="MailingTemplateDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">System</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>False</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="SelectedMailingTemplateIsArchiveCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="MailingTemplateDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">Archive</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>True</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="MailingTemplateDeleteResultIsSuccessCondition" Type="IsNullCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="MailingTemplateDeleteCommand" />
        </Item>
      </Items>
    </Condition>

    <Condition Name="MailingTemplateDeleteResultIsSystemCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="MailingTemplateDeleteCommand" />
        </Item>
        <Item>system</Item>
      </Items>
    </Condition>

    <Condition Name="MailingTemplateDeleteResultIsUsedCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="MailingTemplateDeleteCommand" />
        </Item>
        <Item>used</Item>
      </Items>
    </Condition>

    <Condition Name="FormClosingCondition" Type="FormClosingCondition" Assembly="Conditions" />

    <Condition Name="FormEscapeKeyDownCondition" Type="KeyDownCondition" Assembly="Conditions">
      <Key Value="Escape" />
    </Condition>

    <Condition Name="F5KeyDownCondition" Type="KeyDownCondition" Assembly="Conditions">
      <Key Value="F5" />
    </Condition>
