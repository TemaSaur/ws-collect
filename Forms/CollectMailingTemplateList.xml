        <Property Name="SelectRowByFieldValue">
          <Parameters>
            <Parameter Name="ColumnName">MailingTemplateId</Parameter>
            <Parameter Name="Value">
              <Input />
            </Parameter>
          </Parameters>
        </Property>
      </Object>
    </Command>

    <Command Name="MailingTemplateArchiveMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Архив</Caption>
      <Text>
        <Switch>
          <Case>
            <When>
              <Condition Name="SelectedMailingTemplateIsArchiveCondition" />
            </When>
            <Then>Вы действительно хотите восстановить шаблон из архива?</Then>
          </Case>
          <Case>Вы действительно хотите переместить шаблон в архив?</Case>
        </Switch>
      </Text>
      <Buttons Type="YesNo" />
      <Icon Type="Question" />
    </Command>
    
    <Command Name="MailingTemplateArchiveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="MailingTemplateArchiveSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="MailingTemplateDeleteMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удаление</Caption>
      <Text>Вы действительно хотите удалить шаблон?</Text>
      <Icon Type="Question" />
      <Buttons Type="YesNo" />
    </Command>

    <Command Name="MailingTemplateDeleteCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="MailingTemplateDeleteSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="MailingTemplateDeleteWarningMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удаление</Caption>
      <Text>
        <Switch>
          <Case>
            <When>
              <Condition Name="MailingTemplateDeleteResultIsSystemCondition" />
            </When>
            <Then>Невозможно удалить шаблон, так как он является системным.</Then>
          </Case>
          <Case>
            <When>
              <Condition Name="MailingTemplateDeleteResultIsUsedCondition" />
            </When>
            <Then>Шаблон не был удален, т.к. он используется в программе.\rЗапись перемещена в архив.</Then>
          </Case>
        </Switch>
      </Text>
      <Icon Type="Warning" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="MailingTemplateDataConnectionRefreshCommand" Type="DataConnectionRefreshCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="MailingTemplatePrimaryGetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="UpdatedTrueValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Updated">True</Parameter>
    </Command>

    <Command Name="SelectedMailingTemplateIdValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="SelectedMailingTemplateId">
        <Object Name="MailingTemplateDatabaseTable">
          <Property Name="SelectedRowCellValueByColumnName">
            <Parameters>
              <Parameter Name="ColumnName">MailingTemplateId</Parameter>
            </Parameters>
          </Property>
        </Object>
      </Parameter>
    </Command>

    <Command Name="SelectedValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Selected">True</Parameter>
    </Command>

    <Command Name="SelectMailingTemplateSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands>
        <Command Name="SelectedMailingTemplateIdValueSetCommand" />
        <Command Name="SelectedValueSetCommand" />
        <Command Name="FormCloseCommand" />
      </Commands>
    </Command>
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="MailingTemplateSelectRowCommand">
          <Parameter Name="MailingTemplateId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MailingTemplateAddFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="MailingTemplateDataConnectionRefreshCommand" />
        <Command Name="MailingTemplateSelectRowCommand">
          <Command Name="MailingTemplateAddFormShowCommand" Parameter="MailingTemplateId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MailingTemplateEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="MailingTemplateDataConnectionRefreshCommand" />
        <Command Name="MailingTemplateSelectRowCommand">
          <Command Name="MailingTemplateEditFormShowCommand" Parameter="MailingTemplateId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="MailingTemplateDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Parameter Name="Select" />
          </When>
          <Then>
            <Command Name="SelectMailingTemplateSequentialCommand" />
          </Then>
          <ElseIf>
            <When>
              <Object Name="MailingTemplateEditButton">
                <Property Name="Enabled" />
              </Object>
            </When>
            <Then>
              <Command Name="MailingTemplateEditFormShowCommand" />
            </Then>
          </ElseIf>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MailingTemplateArchiveMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="MailingTemplateArchiveCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MailingTemplateDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="MailingTemplateDeleteCommand" />
        <Command Name="MailingTemplateDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
        <If>
          <When>
            <Not>
              <Condition Name="MailingTemplateDeleteResultIsSuccessCondition" />
            </Not>
          </When>
          <Then>
            <Command Name="MailingTemplateDeleteWarningMessageBoxCommand" />
          </Then>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="F5KeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="MailingTemplateDataConnectionRefreshCommand" />
      </Commands>
    </Execution>
  </Executions>

