  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Or>
              <Parameter Name="SelectionMode" />
              <Parameter Name="MergeMode" />
            </Or>
          </When>
          <Then>
            <Command Name="AddressCityDatabaseTableMultiSelectValueSetCommand" />
          </Then>
        </If>
        <Command Name="AddressCitySelectRowCommand">
          <Parameter Name="AddressCityId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddressCityAddFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="AddressCitySelectRowCommand">
          <Command Name="AddressCityAddFormShowCommand" Parameter="AddressCityId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddressCityEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="AddressCitySelectRowCommand">
          <Command Name="AddressCityEditFormShowCommand" Parameter="AddressCityId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="AddressCityDatabaseTableCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Parameter Name="SelectionMode" />
          </When>
          <Then>
            <If>
              <When>
                <Condition Name="AddressCityIsArchiveCondition" />
              </When>
              <Then>
                <Command Name="AddressCityTrySelectMessageBoxCommand" />
              </Then>
              <Else>
                <Command Name="SelectAddressCitySequentialCommand" />
              </Else>
            </If>
          </Then>
          <ElseIf>
            <When>
              <Parameter Name="MergeMode" />
            </When>
            <Then>
              <Command Name="AddressCityMergeMessageBoxCommand" />
            </Then>
          </ElseIf>
          <Else>
            <If>
              <When>
                <Object Name="AddressCityEditButton">
                  <Property Name="Enabled" />
                </Object>
              </When>
              <Then>
                <Command Name="AddressCityEditFormShowCommand" />
              </Then>
            </If>
          </Else>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddressCityDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityDeleteSaveCommand" />
        <If>
          <When>
            <Not>
              <Command Name="AddressCityDeleteSaveCommand" />
            </Not>
          </When>
          <Then>
            <Command Name="AddressCityTryDeleteMessageBoxCommand" />
          </Then>
        </If>
        <Command Name="AddressCityPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddressCityArchiveMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityArchiveSaveCommand" />
        <Command Name="AddressCityPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="F5KeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityPrimaryGetDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddressCityMergeMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityMergeSaveCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddressCityListMergeFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="AddressCityPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>
  </Executions>

