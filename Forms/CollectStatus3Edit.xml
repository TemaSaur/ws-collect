    <Command Name="SaveSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands Lock="True">
        <If>
          <When>
            <Parameter Name="Edit" />
          </When>
          <Then>
            <Command Name="StatusUpdateSaveCommand" />
          </Then>
          <Else>
            <Command Name="StatusInsertSaveCommand" />
            <Command Name="StatusIdValueSetCommand" />
          </Else>
        </If>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Command>

    <Command Name="FormHeightValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Form>
        <Property Name="Height">
          <Switch>
            <Case>
              <When>
                <Condition Name="BkiPermissionCondition" />
              </When>
              <Then>
                <Switch>
                  <Case>
                    <When>
                      <Object Name="IsFinishStatusCheckBox" />
                    </When>
                    <Then>381</Then>
                  </Case>
                  <Case>333</Case>
                </Switch>
              </Then>
            </Case>
            <Case>245</Case>
          </Switch>
        </Property>
      </Form>
    </Command>

    <Command Name="IsFinishStatusCheckBoxValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="IsFinishStatusCheckBox">
        <Input />
      </Object>
    </Command>

    <Command Name="IsSoldStatusCheckBoxValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="IsSoldStatusCheckBox">
        <Input />
      </Object>
    </Command>
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormHeightValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="ColorListFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="ColorPrimaryGetDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="ColorListFormShowCommand" Parameter="Selected" />
      </ConditionExpression>
      <Commands>
        <Command Name="ColorComboBoxValueSetCommand">
          <Command Name="ColorListFormShowCommand" Parameter="SelectedColorId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="IsFinishStatusChangedCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Object Name="IsFinishStatusCheckBox" />
          </When>
          <Then>
            <Command Name="IsSoldStatusCheckBoxValueSetCommand">false</Command>
          </Then>
        </If>
        <Command Name="FormHeightValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="IsSoldStatusChangedCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Object Name="IsSoldStatusCheckBox" />
          </When>
          <Then>
            <Command Name="IsFinishStatusCheckBoxValueSetCommand">false</Command>
          </Then>
        </If>
        <Command Name="FormHeightValueSetCommand" />
      </Commands>
    </Execution>
  </Executions>

