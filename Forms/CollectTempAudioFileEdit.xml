        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="BeforeIdsArrayVariableValueSetCommand" />
        <If>
          <When>
            <Not>
              <Condition Name="TempAudioFileHasReferencesCondition" />
            </Not>
          </When>
          <Then>
            <Command Name="TempAudioFileReferenceAddFormShowCommand" />
          </Then>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="TempAudioFileReferenceDatabaseTableCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="TempAudioFileReferenceEditFormShowCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="TempAudioFileReferenceAddFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="TempAudioFileDeleteRowsCommand">
          <Command Name="TempAudioFileReferenceAddFormShowCommand" Parameter="ClientId" />
        </Command>
        <Command Name="TempAudioFileAddRowsCommand">
          <Input Name="LoanIds">
            <Command Name="TempAudioFileReferenceAddFormShowCommand" Parameter="LoanIds" />
          </Input>
          <Input Name="ClientId">
            <Command Name="TempAudioFileReferenceAddFormShowCommand" Parameter="ClientId" />
          </Input>
        </Command>
        <Command Name="TempAudioFileReferenceSelectRowCommand">
          <Command Name="TempAudioFileReferenceAddFormShowCommand" Parameter="ClientId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="TempAudioFileReferenceEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="TempAudioFileDeleteRowsCommand">
          <Command Name="TempAudioFileReferenceEditFormShowCommand" Parameter="ClientId" />
        </Command>
        <Command Name="TempAudioFileAddRowsCommand">
          <Input Name="LoanIds">
            <Command Name="TempAudioFileReferenceEditFormShowCommand" Parameter="LoanIds" />
          </Input>
          <Input Name="ClientId">
            <Command Name="TempAudioFileReferenceEditFormShowCommand" Parameter="ClientId" />
          </Input>
        </Command>
        <Command Name="TempAudioFileReferenceSelectRowCommand">
          <Command Name="TempAudioFileReferenceEditFormShowCommand" Parameter="ClientId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="TempAudioFileReferenceDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="TempAudioFileDeleteRowCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="ClientPhoneAddMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientPhoneInsertCommand" />
        <Command Name="ClientPhoneAddSuccessMessageBoxCommand" />
      </Commands>
    </Execution>
  </Executions>

