                    <Command Name="SaveOnCloseMessageBoxCommand" Parameter="Yes" />
                  </When>
                  <Then>
                    <Command Name="SaveSequentialCommand" />
                    <Command Name="FormCloseCommand" />
                  </Then>
                  <ElseIf>
                    <When>
                      <Command Name="SaveOnCloseMessageBoxCommand" Parameter="No" />
                    </When>
                    <Then>
                      <Command Name="FormCloseCommand" />
                    </Then>
                  </ElseIf>
