    <Command Name="SMSGetBalanceCallCommand" Type="CallCommand" Assembly="Commands">
      <Workflow Name="Collect" />
      <Command Name="SMSGetBalanceCommand" />
    </Command>

    <Command Name="SMSLoanClientGetCostCallCommand" Type="CallCommand" Assembly="Commands">
