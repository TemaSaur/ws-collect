        <Parameter Name="ClientTitle">
          <Parameter Name="ClientTitle" />
        </Parameter>
        <Parameter Name="Phone">
          <Object Name="PhoneComboBox" />
        </Parameter>
        <Parameter Name="CreditNumber">
          <Parameter Name="CreditNumber" />
        </Parameter>
        <Parameter Name="CreditDateStart">
          <DataTypeFormat Type="DateTimeDataType" Format="dd.MM.yyyy">
            <Parameter Name="CreditDateStart" />
          </DataTypeFormat>
        </Parameter>
        <Parameter Name="CreditDateEnd">
          <DataTypeFormat Type="DateTimeDataType" Format="dd.MM.yyyy">
            <Parameter Name="CreditDateEnd" />
          </DataTypeFormat>
        </Parameter>
        <Parameter Name="MessageTemplateText">
          <Object Name="MessageTemplateTextBox" />
        </Parameter>
      </Parameters>
    </Command>

    <Command Name="SMSMailingInsertSaveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="SMSMailingInsertSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="SMSLoanClientSendCallCommand" Type="CallCommand" Assembly="Commands">
      <Workflow Name="Collect" />
      <Command Name="SMSLoanClientSendCommand" />
      <Parameters>
        <Parameter Name="MessageMailingId">
          <Command Name="SMSMailingInsertSaveCommand" />
        </Parameter>
        <Parameter Name="CreditNumber">
          <Parameter Name="CreditNumber" />
        </Parameter>
        <Parameter Name="CreditDateStart">
          <DataTypeFormat Type="DateTimeDataType" Format="dd.MM.yyyy">
            <Parameter Name="CreditDateStart" />
          </DataTypeFormat>
        </Parameter>
        <Parameter Name="CreditDateEnd">
          <DataTypeFormat Type="DateTimeDataType" Format="dd.MM.yyyy">
            <Parameter Name="CreditDateEnd" />
          </DataTypeFormat>
        </Parameter>
      </Parameters>
    </Command>

    <Command Name="UpdatedTrueValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Updated">True</Parameter>
    </Command>

    <Command Name="SendSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands Lock="True">
        <Command Name="SMSSettingsCheckDataConnectionRefreshCommand" />
        <If>
          <When>
            <Condition Name="SMSSettingsCheckOkCondition" />
          </When>
          <Then>
            <Command Name="SMSGetBalanceCallCommand" />
            <If>
              <When>
                <Condition Name="SMSBalanceIsNotNullCondition" />
              </When>
              <Then>
                <Command Name="SMSLoanClientGetCostCallCommand" />
                <If>
                  <When>
                    <Condition Name="SMSBalanceEnoughForSendingCondition" />
                  </When>
                  <Then>
                    <Command Name="SMSMailingInsertSaveCommand" />
                    <Command Name="SMSLoanClientSendCallCommand" />
                    <Command Name="UpdatedTrueValueSetCommand" />
                    <Command Name="FormCloseCommand" />
                  </Then>
                  <Else>
                    <Command Name="MessageSendingWarningMessageBoxCommand">Недостаточный баланc для отправки SMS.</Command>
                  </Else>
                </If>
              </Then>
              <Else>
                <Command Name="MessageSendingWarningMessageBoxCommand">SMS-центр недоступен. Повторите попытку.</Command>
              </Else>
            </If>
          </Then>
          <Else>
            <Command Name="MessageSendingWarningMessageBoxCommand">Не заданы настройки отправки SMS.</Command>
          </Else>
        </If>
      </Commands>
    </Command>

    <Command Name="MessageTemplateReplaceVariablesCommand" Type="ReplaceVariablesCommand" Assembly="Collect">
      <Workflow Name="Collect" />
      <OriginalString>
        <Object Name="MessageTemplateTextBox" />
      </OriginalString>
      <Variables>
        <Variable Marker="[Должник]">
          <Object Name="ClientTextBox" />
        </Variable>
        <Variable Marker="[НомерКД]">
          <Object Name="CreditNumberTextBox" />
        </Variable>
        <Variable Marker="[ДатаКД]">
          <Object Name="CreditDateStartTextBox" />
        </Variable>
        <Variable Marker="[ДатаОкончанияКД]">
          <Object Name="CreditDateEndTextBox" />
        </Variable>
      </Variables>
    </Command>

    <Command Name="FormCloseCommand" Type="FormCloseCommand" Assembly="Commands" />
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingNestedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MessageTemplateAddFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="MessageTemplateDataConnectionRefreshCommand" />
        <Command Name="MessageTemplateValueSetCommand">
          <Command Name="MessageTemplateAddFormShowCommand" Parameter="MessageTemplateId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MessageTemplateEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="MessageTemplateDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="MessageTemplatesFormShowCommand" Parameter="FormClosed" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Command Name="MessageTemplatesFormShowCommand" Parameter="Updated" />
          </When>
          <Then>
            <Command Name="MessageTemplateDataConnectionRefreshCommand" />
          </Then>
        </If>
        <If>
          <When>
            <Command Name="MessageTemplatesFormShowCommand" Parameter="Selected" />
          </When>
          <Then>
            <Command Name="MessageTemplateValueSetCommand">
              <Command Name="MessageTemplatesFormShowCommand" Parameter="SelectedMessageTemplateId" />
            </Command>
          </Then>
        </If>
      </Commands>
    </Execution>
  </Executions>

