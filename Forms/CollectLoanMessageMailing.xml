        </Item>
      </Items>
      <DataType Type="DecimalDataType" />
    </Condition>

    <Condition Name="MessageTypeIsSMSEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Parameter Name="MessageType" />
        </Item>
