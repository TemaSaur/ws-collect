                  <Parameter Name="ColumnName">MessageMailingId</Parameter>
                </Parameters>
              </Property>
            </Object>
          </Input>
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="SMSMailingAddFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="SMSMailingDataConnectionRefreshCommand" />
        <Command Name="SMSMailingSelectInTableCommand">
          <Command Name="SMSMailingAddFormShowCommand" Parameter="MessageMailingId" />
        </Command>
        <Command Name="SMSGetBalanceCallCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="SMSMailingEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="SMSMailingDataConnectionRefreshCommand" />
        <Command Name="SMSMailingSelectInTableCommand">
          <Command Name="SMSMailingEditFormShowCommand" Parameter="MessageMailingId" />
        </Command>
        <Command Name="SMSGetBalanceCallCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="SMSMailingDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="SMSMailingDeleteSaveCommand" />
        <If>
          <When>
            <Not>
              <Command Name="SMSMailingDeleteSaveCommand" />
            </Not>
          </When>
          <Then>
            <Command Name="SMSMailingDeleteWarningMessageBoxCommand" />
          </Then>
        </If>
      </Commands>
    </Execution>
  </Executions>

