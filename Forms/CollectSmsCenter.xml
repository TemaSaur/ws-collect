        <Command Name="SMSMailingDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="SMSMailingCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="SMSMailingEditFormShowCommand">
          <Input Name="MessageMailingId">
            <Object Name="SMSMailingDatabaseTable">
