      <FileGuid>
        <Array>
          <Source>
            <DataConnection SourceDataConnection="FileFileArrayGetDataConnection">
              <Fields>
                <Field Name="Guid" />
              </Fields>
            </DataConnection>
          </Source>
          <Filter Type="IsNotNull">
            <Index Value="0" />
          </Filter>
          <Filter Type="NotEqual">
            <Index Value="0" />
            <DataType Type="StringDataType" />
            <Value />
          </Filter>
        </Array>
      </FileGuid>
      <ExportFileName>
        <Command Name="FolderDialogShowCommand" Parameter="Path" />
      </ExportFileName>
    </Command>

    <Command Name="DownloadInFolderMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Выгрузка файлов</Caption>
      <Text>
        <String>
          <Format>Файлы сохранены в папке {0}.</Format>
          <Items>
            <Item>
              <Command Name="FolderDialogShowCommand" Parameter="Path" />
            </Item>
          </Items>
        </String>
      </Text>
      <Icon Type="Information" />
      <Buttons Type="Ok" />
    </Command>
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="FileDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="FileDeleteRowsCommand" />
        <Command Name="FormChangedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="AddFileDialogShowCommand" Parameter="OK" />
      </ConditionExpression>
      <Commands>
        <Command Name="FileDialogPathVariableValueSetCommand">
          <Command Name="AddFileDialogShowCommand" Parameter="OK" />
        </Command>
        <Command Name="UploadFileCommand" />
        <Command Name="FileFileAddRowsCommand" />
        <Command Name="FileDatabaseTableSelectRowsCommand" />
        <Command Name="GuidsToDeleteVariableAddGuidCommand" />
        <Command Name="FormChangedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="FolderDialogShowCommand" Parameter="OK" />
      </ConditionExpression>
      <Commands>
        <Command Name="DownloadFileInFolderCommand" />
        <Command Name="DownloadInFolderMessageBoxCommand" />
      </Commands>
    </Execution>
  </Executions>

