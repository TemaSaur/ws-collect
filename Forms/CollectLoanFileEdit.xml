                      <Command Name="UploadFileCommand" />
                    </Item>
                  </Structure>
                </Parameter>
              </Parameters>
            </Property>
          </Object>
        </Property>
      </Object>
    </Command>

    <Command Name="FileDeleteRowsCommand" Type="ValueSetCommand" Assembly="Commands">
      <DataConnection Name="FileFileArrayGetDataConnection">
        <Property Name="DeleteRowsByIndices">
          <Parameters>
            <Parameter Name="Value">
              <DataConnection SourceDataConnection="FileFileArrayGetDataConnection">
                <Property Name="RowsIndicesOf">
                  <Parameters>
                    <Parameter Name="SearchWithArrays">True</Parameter>
                    <Parameter Name="ColumnNames">
                      <Structure Type="List">
                        <Item>Guid</Item>
                      </Structure>
                    </Parameter>
                    <Parameter Name="Values">
                      <Structure Type="List">
                        <Item>
                          <Object Name="FileDatabaseTable">
                            <Property Name="SelectedRowsCellValuesByColumnName">
                              <Parameters>
                                <Parameter Name="ColumnName">Guid</Parameter>
                              </Parameters>
                            </Property>
                          </Object>
                        </Item>
                      </Structure>
                    </Parameter>
                  </Parameters>
                </Property>
              </DataConnection>
            </Parameter>
          </Parameters>
        </Property>
      </DataConnection>
    </Command>

    <Command Name="GuidsToDeleteVariableAddGuidCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="GuidsToDeleteVariable">
        <Array>
          <Source>
            <Object Name="GuidsToDeleteVariable" />
          </Source>
          <Add>
            <Command Name="UploadFileCommand" />
          </Add>
        </Array>
      </Object>
    </Command>

    <Command Name="GuidsToDeleteVariableRemoveGuidCommand" Type="ValueSetCommand" Assembly="Commands">
