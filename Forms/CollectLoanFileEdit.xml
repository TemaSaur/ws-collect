    </Command>

    <Command Name="FolderDialogShowCommand" Type="FolderDialogShowCommand" Assembly="Commands">
      <Title>Выбор папки для выгрузки файлов</Title>
    </Command>

    <Command Name="DownloadFileInFolderCommand" Type="DownloadFileCommand" Assembly="Commands">
