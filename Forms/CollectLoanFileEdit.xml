        <Array>
          <Source>
            <Object Name="GuidsToDeleteVariable" />
          </Source>
          <Filter Type="NotIn">
            <Index Value="0" />
            <DataType Type="StringDataType" />
            <Value>
              <DataConnection SourceDataConnection="FileFileArrayGetDataConnection">
                <Fields>
                  <Field Name="Guid" />
                </Fields>
              </DataConnection>
            </Value>
          </Filter>
        </Array>
