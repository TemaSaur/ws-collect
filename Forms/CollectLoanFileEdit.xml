      <Icon Type="Question" />
      <Buttons Type="YesNo" />
    </Command>

    <Command Name="UpdatedTrueValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Updated">True</Parameter>
    </Command>

    <Command Name="SaveSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands Lock="True">
        <Command Name="GuidsToDeleteVariableRemoveGuidCommand" />
        <Command Name="DeleteFileCommand" />

        <Command Name="FileFileListValueSetCommand" />
        <Command Name="LoanClientFormIDValueSetCommand" />
        <Command Name="FileTitleValueSetCommand" />
        <Command Name="DescriptionValueSetCommand" />

        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Command>

    <Command Name="DownloadFileCommand" Type="DownloadFileCommand" Assembly="Commands">
      <ReadOnly>False</ReadOnly>
      <FileGuid>
        <Object Name="FileDatabaseTable">
          <Property Name="SelectedRowCellValueByColumnName">
            <Parameters>
              <Parameter Name="ColumnName">Guid</Parameter>
            </Parameters>
          </Property>
        </Object>
      </FileGuid>
    </Command>

    <Command Name="AddFileDialogShowCommand" Type="FileDialogShowCommand" Assembly="Commands">
      <Title>Выберите файлы</Title>
      <MultiSelect>True</MultiSelect>
      <InitialDirectory>
        <Object Name="FileDialogPathVariable" />
      </InitialDirectory>
    </Command>

    <Command Name="UploadFileCommand" Type="UploadFileCommand" Assembly="Commands">
      <FileName>
