        <DataConnection SourceDataConnection="FileFileArrayGetDataConnection">
          <Fields>
            <Field Name="Guid" />
            <Field Name="FileName" />
          </Fields>
        </DataConnection>
      </Parameter>
    </Command>

    <Command Name="FileTitleValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
