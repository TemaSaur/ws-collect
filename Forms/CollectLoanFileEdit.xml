      <Text>Вы действительно хотите удалить выбранные файлы?</Text>
      <Icon Type="Question" />
      <Buttons Type="YesNo" />
    </Command>

    <Command Name="FileFileAddRowsCommand" Type="ValueSetCommand" Assembly="Commands">
      <DataConnection Name="FileFileArrayGetDataConnection">
        <Property Name="AddRows">
          <Parameters>
            <Parameter Name="ColumnNames">
              <Structure Type="List">
                <Item>Guid</Item>
                <Item>FileName</Item>
              </Structure>
            </Parameter>
            <Parameter Name="Values">
              <Array>
                <Source>
                  <Command Name="UploadFileCommand" />
                </Source>
                <Select>
                  <Items>
                    <Item Type="Number" />
                    <Item Type="Index">0</Item>
                  </Items>
                </Select>
                <Join>
                  <OuterArray>
                    <Array>
                      <Source>
                        <Command Name="AddFileDialogShowCommand" Parameter="FullFileName" />
                      </Source>
                      <Select>
                        <Items>
                          <Item Type="Number" />
                          <Item Type="Index">0</Item>
                        </Items>
                      </Select>
                    </Array>
                  </OuterArray>
                  <Keys>
                    <Inner Index="0" Type="IntegerDataType" />
                    <Outer Index="0" Type="IntegerDataType" />
                  </Keys>
                  <Result>
                    <Inner Index="1" />
                    <Outer Index="1" />
                  </Result>
                </Join>
              </Array>
            </Parameter>
          </Parameters>
        </Property>
      </DataConnection>
    </Command>

