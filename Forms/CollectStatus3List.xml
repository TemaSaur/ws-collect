  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormEscapeKeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="StatusSelectRowCommand">
          <Parameter Name="StatusId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="StatusAddFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="StatusPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="StatusSelectRowCommand">
          <Command Name="StatusAddFormShowCommand" Parameter="StatusId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="StatusEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="StatusPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="StatusSelectRowCommand">
          <Command Name="StatusEditFormShowCommand" Parameter="StatusId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="StatusDatabaseTableCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Parameter Name="SelectionMode" />
          </When>
          <Then>
            <If>
              <When>
                <Condition Name="StatusIsArchiveCondition" />
              </When>
              <Then>
                <Command Name="StatusTrySelectMessageBoxCommand" />
              </Then>
              <Else>
                <Command Name="SelectStatusSequentialCommand" />
              </Else>
            </If>
          </Then>
          <Else>
            <If>
              <When>
                <Object Name="StatusEditButton">
                  <Property Name="Enabled" />
                </Object>
              </When>
              <Then>
                <Command Name="StatusEditFormShowCommand" />
              </Then>
            </If>
          </Else>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="StatusDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="StatusDeleteSaveCommand" />
        <If>
          <When>
            <Not>
              <Command Name="StatusDeleteSaveCommand" />
            </Not>
          </When>
          <Then>
            <Command Name="StatusTryDeleteMessageBoxCommand" />
          </Then>
        </If>
        <Command Name="StatusPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="StatusArchiveMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="StatusArchiveSaveCommand" />
        <Command Name="StatusPrimaryGetDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="F5KeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="StatusPrimaryGetDataConnectionRefreshCommand" />
      </Commands>
    </Execution>
  </Executions>

